<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvRecyclerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardCornerRadius="@dimen/dp_10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:layout_margin="@dimen/dp_10"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvProductImageProductsRecyclerLayout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivProductImageProductRecyclerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_image_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvProductNameProductRecyclerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Milk"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@id/cvProductImageProductsRecyclerLayout"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvProductQuantityProductRecyclerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="pieces"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@id/cvProductImageProductsRecyclerLayout"
            app:layout_constraintTop_toBottomOf="@id/tvProductNameProductRecyclerLayout" />

        <TextView
            android:id="@+id/tvProductPriceProductRecyclerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="1,256"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/cvProductImageProductsRecyclerLayout"
            app:layout_constraintTop_toBottomOf="@id/tvProductQuantityProductRecyclerLayout" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/scStockSwitchProductsRecyclerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvProductPriceProductRecyclerLayout" />

        <TextView
            android:id="@+id/tvStockProductsRecyclerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="In Stock"
            android:textColor="@color/custom_green"
            app:layout_constraintStart_toEndOf="@id/cvProductImageProductsRecyclerLayout"
            app:layout_constraintTop_toBottomOf="@id/tvProductPriceProductRecyclerLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>